<?xml version = '1.0' encoding = 'utf-8'?>
<!DOCTYPE web-app PUBLIC "-//Sun Microsystems, Inc.//DTD Web Application 2.2//EN" "http://java.sun.com/j2ee/dtds/web-app_2_2.dtd">
<web-app>
   <description>Sample Simple Web App</description>

   <servlet>
      <servlet-name>helloworld</servlet-name>
      <servlet-class>essap.sample.helloworld.HelloWorldServlet</servlet-class>
   </servlet>
   <servlet-mapping>
      <servlet-name>helloworld</servlet-name>
      <url-pattern>/hello</url-pattern>
   </servlet-mapping>

   <servlet>
      <servlet-name>usermanager</servlet-name>
      <servlet-class>essap.sample.servlets.UserManagerServlet</servlet-class>
   </servlet>
   <servlet-mapping>
      <servlet-name>usermanager</servlet-name>
      <url-pattern>/user/*</url-pattern>
   </servlet-mapping>

</web-app>
